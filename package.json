{
  "name": "@internetarchive/your-webcomponent",
  "description": "The Internet Archive Typescript WebComponent template.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/internetarchive/iaux-your-webcomponent.git"
  },
  "license": "AGPL-3.0-only",
  "author": "Internet Archive",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "start": "vite serve demo",
    "prepare": "vite build",
    "build": "vite build",
    "lint": "eslint . && prettier \"**/*.ts\" --check",
    "format": "eslint . --fix && prettier \"**/*.ts\" --write",
    "circular": "madge --circular --extensions ts .",
    "test": "npm run lint && npm run circular && vitest run --coverage",
    "test:watch": "vitest",
    "ghpages:build": "npm run prepare && vite build --mode ghpages",
    "ghpages:publish": "npm run ghpages:prepare -e $(git branch --show-current)",
    "ghpages:prepare": "npm run ghpages:build && touch ghpages/.nojekyll && npm run ghpages:generate",
    "ghpages:generate": "gh-pages -t -d ghpages -m \"Build for $(git log --pretty=format:\"%h %an %ai %s\" -n1) [skip ci]\""
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.2",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "axe-core": "^4.11.1",
    "eslint": "^10.0.0",
    "eslint-plugin-html": "^8.1.4",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "madge": "^8.0.0",
    "path": "^0.12.7",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "sinon": "^21.0.1",
    "ts-lit-plugin": "^2.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "overrides": {
    "typescript-eslint": {
      "eslint": "$eslint"
    }
  },
  "dependencies": {
    "lit": "^2.8.0 || ^3.3.2"
  }
}
